<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>
   <extension
         point="net.sf.dftools.workflow.tasks">
      <task
            id="org.ietr.preesm.plugin.exportXml.sdf4jgml"
            name="SDF4J GML Exporter "
            type="org.ietr.preesm.plugin.exportXml.SDF4JGMLExporter">
         <inputs>
            <input
                  id="SDF"
                  object="org.sdf4j.model.sdf.SDFGraph">
            </input>
         </inputs>
      </task>
      <task
            id="org.ietr.preesm.plugin.transforms.sdf2hsdf"
            name="SDF2HSDF"
            type="org.ietr.preesm.plugin.transforms.HSDFTransformation">
         <inputs>
            <input
                  id="SDF"
                  object="org.sdf4j.model.sdf.SDFGraph">
            </input>
         </inputs>
         <outputs>
            <output
                  id="SDF"
                  object="org.sdf4j.model.sdf.SDFGraph">
            </output>
         </outputs>
      </task>
      <task
            id="org.ietr.preesm.plugin.transforms.flathierarchy"
            name="Hierarchy flattening"
            type="org.ietr.preesm.plugin.transforms.HierarchyFlattening">
         <inputs>
            <input
                  id="SDF"
                  object="org.sdf4j.model.sdf.SDFGraph">
            </input>
         </inputs>
         <outputs>
            <output
                  id="SDF"
                  object="org.sdf4j.model.sdf.SDFGraph">
            </output>
         </outputs>
      </task>
   </extension>

</plugin>
