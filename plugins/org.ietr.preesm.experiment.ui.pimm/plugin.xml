<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.graphiti.ui.diagramTypes">
      <diagramType
            name="PiMM Diagram Type"
            type="PiMM"
            id="org.ietr.preesm.experiment.ui.pimm.pimmDiagramType">
      </diagramType>
   </extension>
   <extension
         point="org.eclipse.graphiti.ui.diagramTypeProviders">
      <diagramTypeProvider
            name="PiMM Diagram Type Provider"
            class="org.ietr.preesm.experiment.ui.pimm.diagram.PiMMDiagramTypeProvider"
            id="org.ietr.preesm.experiment.ui.pimm.pimmDiagramTypeProvider">
         <diagramType
               id="org.ietr.preesm.experiment.ui.pimm.pimmDiagramType">
         </diagramType>
         <imageProvider
               id="org.ietr.preesm.experiment.ui.pimm.util.PiMMImageProvider">
         </imageProvider>
      </diagramTypeProvider>
   </extension>
   <extension
         point="org.eclipse.ui.newWizards">
      <wizard
            canFinishEarly="false"
            category="org.ietr.preesm.category"
            class="org.ietr.preesm.experiment.ui.pimm.wizards.NewPiMMWizard"
            hasPages="true"
            icon="icons/pi.gif"
            id="org.ietr.preesm.experiment.ui.pimm.wizards.NewPiMMWizard"
            name="Algorithm Description (PiMM)"
            project="true">
         <description>
            Create a new PiMM algorithm.
         </description>
      </wizard>
   </extension>
   <extension
         point="org.eclipse.ui.editors">
      <editor
            class="org.eclipse.ui.editors.text.TextEditor"
            default="false"
            extensions="pi"
            icon="icons/pi.gif"
            id="org.ietr.preesm.experiment.ui.pimm.editor"
            name="PiMM Editor">
      </editor>
   </extension>
   <extension
         point="org.eclipse.graphiti.ui.imageProviders">
      <imageProvider
            class="org.ietr.preesm.experiment.ui.pimm.diagram.PiMMImageProvider"
            id="org.ietr.preesm.experiment.ui.pimm.util.PiMMImageProvider">
      </imageProvider>
   </extension>
   <extension
         point="org.eclipse.ltk.core.refactoring.renameParticipants">
      <renameParticipant
            class="org.ietr.preesm.experiment.ui.pimm.refactoring.RenamePi"
            id="org.ietr.preesm.experiment.ui.pimm.refactoring.RenamePi"
            name="RenamePi">
         <enablement>
            <and>
               <instanceof
                     value="org.eclipse.core.resources.IFile">
               </instanceof>
               <test
                     property="org.eclipse.core.resources.extension"
                     value="pi">
               </test>
            </and>
         </enablement>
      </renameParticipant>
      <renameParticipant
            class="org.ietr.preesm.experiment.ui.pimm.refactoring.RenameDiagram"
            id="org.ietr.preesm.experiment.ui.pimm.refactoring.RenameDiagram"
            name="RenameDiagram">
         <enablement>
            <and>
               <instanceof
                     value="org.eclipse.core.resources.IFile">
               </instanceof>
               <test
                     property="org.eclipse.core.resources.extension"
                     value="diagram">
               </test>
            </and>
         </enablement>
      </renameParticipant>
   </extension>
   <extension
         point="org.eclipse.ltk.core.refactoring.copyParticipants">
      <copyParticipant
            class="org.ietr.preesm.experiment.ui.pimm.refactoring.CopyPi"
            id="org.ietr.preesm.experiment.ui.pimm.refactoring.CopyPi"
            name="CopyPi">
         <enablement>
            <and>
               <instanceof
                     value="org.eclipse.core.resources.IFile">
               </instanceof>
               <test
                     property="org.eclipse.core.resources.extension"
                     value="pi">
               </test>
            </and>
         </enablement>
      </copyParticipant>
      <copyParticipant
            class="org.ietr.preesm.experiment.ui.pimm.refactoring.CopyDiagram"
            id="org.ietr.preesm.experiment.ui.pimm.refactoring.CopyDiagram"
            name="CopyDiagram">
         <enablement>
            <and>
               <instanceof
                     value="org.eclipse.core.resources.IFile">
               </instanceof>
               <test
                     property="org.eclipse.core.resources.extension"
                     value="diagram">
               </test>
            </and></enablement>
      </copyParticipant>
   </extension>

</plugin>
